<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LinkManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LinkManager" parent="Base.Theme.LinkManager" />

    <style name="Theme.LinkManager.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorBgLayouts</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="splashScreenIconSize">6dp</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.LinkManager</item>
    </style>
</resources>