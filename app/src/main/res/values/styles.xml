<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Medium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfpro_display_medium</item>
    </style>

    <style name="Medium.Black">
        <item name="android:textColor">@color/colorBlackWhite</item>
    </style>

    <style name="Medium.Black.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Medium.Black.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Medium.Black.Navigation">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorBlackWhite</item>
    </style>

    <style name="Regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="Regular.Black">
        <item name="android:textColor">@color/colorBlackWhite</item>
    </style>

    <style name="Regular.Black.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="PopupItem" parent="Regular.Black.16">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/dp_60</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Regular.Black.SettingsItem">
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="dialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorBgLayouts</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circular" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/dp_10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_10</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/colorHintFloating</item>
        <item name="android:textColorHint">@color/colorHintEditText</item>
        <item name="boxBackgroundColor">@color/colorBGTextInputLayout</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="hintTextAppearance">@style/hintAppearance</item>
    </style>

    <style name="BaseTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="errorEnabled">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextView2</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">50</item>
        <item name="android:textAppearance">@style/textAppearance</item>
    </style>

    <style name="textAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="ButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/dp_35</item>
    </style>

    <style name="buttonPositive" parent="ButtonBase">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/sfpro_display_medium</item>
    </style>

    <style name="buttonNegative" parent="ButtonBase">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/sfpro_display_medium</item>
    </style>

    <style name="buttonBlueBlack15" parent="buttonPositive">
        <item name="android:background">@drawable/bg_blue_black15_round_corners</item>
    </style>

    <style name="textButton" parent="buttonNegative">
        <item name="android:background">@null</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>
</resources>